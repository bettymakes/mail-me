<h1>All my items!</h1>

<%= form_tag email_path do %>
  <%= email_field_tag 'email', '', placeholder: 'test@example.com' %>
  <button>Send to me</button>
<% end %>

<% unless @items.any? %>
  <p>No items yet!</p>
<% end %>

<ul>
  <% @items.each do |item| %>
    <li>
      <%= item.name %> |
      <%= item.quantity %> |
      <%= button_to "Delete", item, method: :delete %>
    </li>
  <% end %>
</ul>

<% if @item.errors.any? %>
  <p>Couldn't save the item because:</p>
  <ul>
    <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @item do |f| %>
  <div><%= f.label :name %></div>
  <div><%= f.text_field :name, autofocus: true %></div>

  <div><%= f.label :quantity %></div>
  <div><%= f.number_field :quantity %></div>

  <button>Add item</button>
<% end %>
